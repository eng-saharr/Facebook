<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".ui.SplashActivity2">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/icon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintWidth="0dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="@dimen/_50sdp"
        android:src="@drawable/facel"
        app:civ_border_width="5dp"
        app:civ_border_color="@color/white"
        tools:ignore="MissingConstraints" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/icon_meta"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/icon"
        android:src="@drawable/meta"
        android:layout_margin="@dimen/_100sdp"
        android:paddingVertical="@dimen/_200sdp"
        app:layout_editor_absoluteX="@dimen/_100sdp"/>









</androidx.constraintlayout.widget.ConstraintLayout>